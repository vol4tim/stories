{
  "name": "components",
  "version": "0.1.0",
  "main": "dist/components.common.js",
  "module": "dist/components.common.js",
  "license": "BSD-3-Clause",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build-demo": "vue-cli-service build --dest doc/demo",
    "build": "vue-cli-service build --target lib --name components src/lib.js",
    "lint": "vue-cli-service lint",
    "storybook": "start-storybook",
    "build-storybook": "build-storybook -o doc",
    "build-doc": "npm run build-storybook && npm run build-demo",
    "deploy": "gh-pages -d doc"
  },
  "dependencies": {
    "core-js": "^3.4.4",
    "vue": "^2.6.10"
  },
  "devDependencies": {
    "@component-controls/storybook": "^0.5.1",
    "@storybook/addon-actions": "6.0.0-alpha.13",
    "@storybook/addon-docs": "6.0.0-alpha.13",
    "@storybook/addon-knobs": "6.0.0-alpha.13",
    "@storybook/addons": "6.0.0-alpha.13",
    "@storybook/vue": "6.0.0-alpha.13",
    "@vue/cli-plugin-babel": "^4.1.0",
    "@vue/cli-plugin-eslint": "^4.1.0",
    "@vue/cli-service": "^4.1.0",
    "add": "^2.0.6",
    "babel-eslint": "^10.0.3",
    "babel-preset-vue": "^2.0.2",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "gh-pages": "^2.2.0",
    "node-sass": "^7.0.0",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "vue-docgen-api": "^4.7.6",
    "vue-docgen-loader": "^1.3.0",
    "vue-template-compiler": "^2.6.10",
    "yarn": "^1.21.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
